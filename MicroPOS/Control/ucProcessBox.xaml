<UserControl
	x:Class="MicroPOS.Control.ucProcessBox" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:wpf="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf" xmlns:system="clr-namespace:System;assembly=mscorlib" xmlns:micropos="clr-namespace:MicroPOS" xmlns:controls="clr-namespace:MicroPOS.Control"
	Background="#FFFFFFFF"
	FontFamily="Arial"
	Height="200"
	Width="200">
	<Grid
		Name="_progressGrid">
		<StackPanel
			Margin="10"
			Orientation="Vertical">
			<ProgressBar
				Style="{DynamicResource MaterialDesignCircularProgressBar}"
				HorizontalAlignment="Center"
				IsIndeterminate="True"
				Margin="30"
				Value="0"
				Height="100"
				Width="100" />
			<TextBlock
				Name="_progressMsg"
				Text="Printing"
				HorizontalAlignment="Center"
				FontSize="24"
				Foreground="#FF4169E1"
				Visibility="Collapsed" />
		</StackPanel>
	</Grid>
</UserControl>
