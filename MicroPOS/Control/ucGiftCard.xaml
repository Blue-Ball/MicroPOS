<UserControl
	x:Class="MicroPOS.Control.ucGiftCard" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:MicroPOS.Control">
	<Grid
		Background="#FFFFFFFF">
		<Border
			Name="_cardBorder"
			Width="240"
			Height="420"
			Margin="20, 10"
			CornerRadius="5"
			BorderThickness="2">
			<StackPanel
				Orientation="Vertical"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				Margin="5">
				<Image
					Name="_cardImage"
					Source="/MicroPOS;component/Images/ico_gift_uber.png"
					Margin="10"
					Stretch="UniformToFill"
					StretchDirection="DownOnly">
					<UIElement.Effect>
						<DropShadowEffect
							Direction="300"
							Color="DarkGray"
							ShadowDepth="5"
							BlurRadius="5" />
					</UIElement.Effect>
				</Image>
				<TextBlock
					Name="_cardName"
					Text="Uber"
					FontSize="64"
					Foreground="#FF000000"
					TextWrapping="Wrap"
					FontFamily="Bebas Neue"
					VerticalAlignment="Center"
					HorizontalAlignment="Center">
					<UIElement.Effect>
						<DropShadowEffect
							ShadowDepth="3"
							Direction="330"
							Color="DarkGray"
							Opacity="0.3"
							BlurRadius="4" />
					</UIElement.Effect>
				</TextBlock>
			</StackPanel>
		</Border>
	</Grid>
</UserControl>
